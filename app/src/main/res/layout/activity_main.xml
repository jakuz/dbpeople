<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    tools:context="pl.lawendowadolina.dbpeople.MainActivity">

    <EditText
        android:id="@+id/editMainName"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="@string/editName"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingRight="5dp" />

    <EditText
        android:id="@+id/editMainSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editMainName"
        android:layout_alignBottom="@+id/editMainName"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/editMainName"
        android:ems="10"
        android:hint="@string/editSurname"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingRight="5dp" />

    <EditText
        android:id="@+id/editCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editMainSurname"
        android:layout_centerHorizontal="false"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="@string/editCity"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="5dp" />

    <Button
        android:id="@+id/buttonMainAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editCity"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/buttonAdd" />

    <ListView
        android:id="@+id/listMain"
        style="@style/Widget.AppCompat.ListView.DropDown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonMainAdd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />


</android.widget.RelativeLayout>
